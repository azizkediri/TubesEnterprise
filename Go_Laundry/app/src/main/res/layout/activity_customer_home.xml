<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/banner_home" />

    <Button
        android:id="@+id/btnAdminListOrder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="163dp"
        android:layout_marginStart="62dp"
        android:layout_weight="1"
        android:background="@drawable/ic_message_black_24dp"
        android:text="" />

    <Button
        android:id="@+id/btnCustomerCek"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAdminListOrder"
        android:layout_marginEnd="52dp"
        android:background="@drawable/ic_check_black_24dp"
        android:text="" />

    <TextView
        android:id="@+id/txtCustHomeNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:text="Nama User" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnAdminListOrder"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_akun__black_24dp"
        android:text="" />
</RelativeLayout>
